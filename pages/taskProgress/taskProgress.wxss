/**index.wxss**/
page{
  height: 100%;
}
.container{
  padding: 0;
  height:100%;
  overflow:hidden;
}
.flex{
  display: flex;
}
/*  导航   */
.tabBar{
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 109rpx;
  border-top: 1px solid #DADADA;
}
.tabBar .tabItem{
  width: 33.3%;
  height: 100%;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  color: #525252;
}
.tabBar .tabItem image{
  width: 52rpx;
  height: 47rpx;
}


/*主体内容*/
.wrap{
  position: relative;
  width: 100%;
  height: 100%;
  background: #fafafa;
  box-sizing: border-box;
}

.wrap .classInfo{
  width: 100%;
  height: 45px;
  line-height: 45px;
  padding: 0 30rpx 0 48rpx;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  color: #1fba21;
  background: #fff;
  box-sizing: border-box;
}
.wrap .classInfo .arrow{
  width: 11rpx;
  height: 16rpx;
  padding-right: 10rpx;
}
.wrap .classInfo .menu{
  width: 49rpx;
  height: 28rpx;
}
.wrap .choise{
  padding: 16rpx;
  padding-left: 28rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #95C796;
  background: #fff;
}
.wrap .choise .choiseItem{
  position: relative;
  padding-left:30rpx;
  padding-right:60rpx;
  margin-right: 20rpx;
  height: 26px;
  line-height: 26px;
  background: #eee;
  border-radius: 25rpx;
  font-size: 24rpx;
  color: #666;
}
.wrap .choise .choiseItem image{
  position: absolute;
  right: 25rpx;
  top: 50%;
  margin-top: -8rpx;
  width: 25rpx;
  height: 18rpx;
}
.wrap .tasksTable{
  width: 100%;
  background: #fff;
  overflow: hidden;
}
.wrap .tasksTable .ttHead{
  position: relative;
  font-size: 30rpx;
  min-height: 20px;
  padding:10px 0;
  line-height: 20px;
  text-align: center;
  z-index: 1000;
  background: #fff;
  border-bottom: 1px solid #95C796;
}
.wrap .tasksTable .ttHead .ttHead-fix{
  position: relative;
  background: #fff;

  z-index:88;
}
.wrap .tasksTable .ttHead .ttHead-scroll{
  width: 999px;
  z-index:77;
  background: #fff;
}
.wrap .tasksTable .ttHead .sName{
  width: 65px;

}
.wrap .tasksTable .ttHead image{
  width: 26rpx;
  height: 19rpx;
}
.wrap .tasksTable .ttHead .ttHead-scroll{
  width: 999px;
  flex-wrap: nowrap;
  position: relative;
}

.wrap .tasksTable .ttHead .ttHead-scroll .task{
  white-space: wrap;
  /*padding: 0 10px;*/
  width: 70px;
}
.wrap .tasksTable .ttHead .ttHead-scroll .time{
  /*padding: 0 15px;*/
  width: 85px;

}
.wrap .tasksTable .ttBody {
  position: relative;
  font-size: 30rpx;
  min-height: 40px;
  padding: 0;
  line-height:40px;
  text-align: center;
  border-bottom-color: #fafafa;
  z-index: 999;
}
.wrap .tasksTable .ttBody .ttHead-fix{
  border-bottom-color: transparent;
}
.wrap .tasksTable .ttBody .ttHead-fix .sName{
  height: 40px;
  border-bottom: 1px solid #ddd;
  box-sizing: border-box;
}
.wrap .tasksTable .ttBody .ttHead-scroll {
  border-bottom-color: transparent;
}
.wrap .tasksTable .ttBody .ttHead-scroll .scroll-item{
  height: 40px;
  border-bottom: 1px solid #ddd;
  box-sizing: border-box;
}
.showImg{
  display: block;
  margin: 0 auto;
  padding-bottom: 100px;
}

.btn {
  padding-top: 15px;
  background: #fafafa;
  font-size: 36rpx;
}
.btn .loginBtn{
  width: 690rpx;
  height: 44px;
  line-height: 44px;
  background: #1fba21;
  color: #fff;
}
.hoverLogin{
  background: #009502!important;
}

/*转发*/
.forward{
  position: absolute;
  left: 50%;
  top: 0;
  margin-left: -45%;
  width: 90%;
  height: 510rpx;
  background: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow:  0 0 10px #ddd;
}
.forward .fClass{
  height: 50%;
  font-size: 48rpx;
  color: #1FB923;
}
.forward .fClass image{
  width: 33rpx;
  height: 47rpx;
  padding-top: 16rpx;
  padding-left: 26rpx;
  text-align: left;
}
.forward .fClass view{
  text-align: center;
}
.forward .fDetail{
  height: 50%;
  padding: 0 56rpx;

  background: #1FB923;
  position: relative;
}
.forward .fDetail .circle{
  position: absolute;
  right: 28rpx;
  top: -22rpx;
  width: 44rpx;
  height: 44rpx;
  background: #fff;
  border-radius: 50%;
}
.forward .fDetail .topIcon{
  border-bottom: 1px dashed #fff;
  padding-bottom: 10rpx;
}
.forward .fDetail .topIcon .iconItem{
  width: 33%;
  padding-top: 38rpx;
  text-align: center;
  flex-direction: column;
  justify-content: center;
  align-content: center;
  font-size: 30rpx;
  color: #fff;
}
.forward .fDetail .topIcon image{
  display: block;
  width: 59rpx;
  height: 43rpx;
  padding-bottom: 10rpx;
  margin: 0 auto;
}
.forward .fDetail .bottomTxt{
  padding-top: 30rpx;
}
.forward .fDetail .bottomTxt view{
  width: 33%; 
  text-align: center;
  font-size: 30rpx;
  color: #fff;
}


/*弹窗*/
.float{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background:rgba(0,0,0,.3);
  z-index: 10000;
}
.float .floatWrap{
  width: 80%;
  height: 560rpx;
  padding: 0 12rpx;
  background: #fff;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -40%;
  margin-top: -280rpx;
  border-radius: 10rpx;
  box-sizing: border-box;
}
.float .floatWrap .arrows{
  position: relative;
  height: 67rpx;
}
.float .floatWrap .arrows image{
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -9rpx;
  margin-top: -5rpx;
  width: 18rpx;
  height: 11rpx;
}
.float .floatWrap .floatC{
  height: 426rpx;

  overflow-y: scroll;
  overflow-X: hidden;
}
.float .floatWrap .floatC .floatC-item{
  height: 97rpx;
  line-height: 97rpx;
  text-align: center;
  border-bottom: 1px solid #ddd;
  font-size: 28rpx;
  color: #333;
}


