/**index.wxss**/
page{
  height: 100%;
}
.container{
  padding: 0;
}
.wrap{
  width: 100%;
  height: 100%;
  padding-top: 350rpx;
  background: #fafafa;
  box-sizing: border-box;
}
.item{
  display: flex;
  align-items: center;
  width: 70%;
  height: 108rpx;
  padding-left: 44rpx;
  padding-right: 20rpx;
  border: 1px solid #E6E6E6;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  background: #fff;
  margin: 0 auto;
  box-sizing: border-box;
}
.item1 {
  border-top: 0;
  border-top-left-radius: 0;
  border-top-right-radius: 0;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}
.item .userIcon{
  width: 40rpx;
  height: 40rpx;
  padding-right: 12rpx;
}
.item .userIcon image{
  width: 40rpx;
  height: 40rpx;
}
.item input{
  font-size: 30rpx;
  color: #666;
  flex:1;
}
.item-btns{
  width: 100%;
  padding: 26rpx 0;
  color: #383838;
}
.item-btns radio-group{
  width: 100%;
  display: flex;
}
.item-btns .radio{
  display: block;
  width: 50%;
  text-align: center;
  font-size: 30rpx;
}
.item-btns .radio radio{
  padding-left: 10rpx;
}
.item button{
  width: 250rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  padding: 0;
  margin-right: 30rpx;
  text-align: center;
  color: #fff;
  background: #F3904C;
}

.btn{
  padding-top: 50rpx;
}
.btn .loginBtn{
  width: 70%;
  height: 90rpx;
  background: #F3904C;
  color: #fff;
}

.logins{
  width: 70%;
  margin: 0 auto;
  padding-top: 50rpx;
  font-size: 30rpx;
  text-align: right;
  color: #363636;
}
.logins navigator{
  display: inline;
  border-bottom: 1px solid #363636;
}

.forget{
  margin-top: 12rpx;
  font-size: 26rpx;
  color: #BABABA;
  width: 100%;
  text-align: center;
}
.forget navigator{
  padding: 20rpx 0;
}
