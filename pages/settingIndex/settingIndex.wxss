/**index.wxss**/
page{
  height: 100%;
}
.container{
  padding: 0;
  justify-content: flex-start;
}

.flex{
  display: flex;
}

.wrap{
  position: relative;
  width: 100%;
  padding: 0 20rpx;
  padding-top: 144rpx;
  padding-bottom: 20rpx;
  background: #fafafa;
  box-sizing: border-box;
  flex-wrap:  wrap;
}
.wrap1{
  padding-top: 0;
}

.wrap .item{
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 47%;
  margin: 0 10rpx;
  border-radius: 10rpx;
  height: 260rpx;
  box-shadow: 0 0 10rpx #ccc;
  color: #525252;
  font-size: 26rpx;
}
.wrap .item image{
  width: 52rpx;
  height: 48rpx;
}
.activeStyle{
  background: #1FBB1C;
  color: #fff !important;
}
/*  导航   */
.tabBar{
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 55px;
  border-top: 1px solid #DADADA;
  overflow:hidden;
}
.tabBar .tabItem{
  width: 33.3%;
  height: 100%;
  font-size: 15px;
  color: #525252;
  text-align: center;
  padding: 5px 0;
}
.tabBar .tabItem .icon{
  
  height: 24px;
  overflow: hidden;
}
.tabBar .tabItem image{
  margin: 0 auto;
  width: 26px;
  height: 24px;
}
.tabBar .tabItem .txt{
  height: 15px;
  line-height: 15px;
  padding-top: 6px;
}