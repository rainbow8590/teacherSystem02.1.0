/**index.wxss**/
page{
  height: 100%;
}
.container{
  padding: 0;
}
.flex{
  display: flex;
}
/*  导航   */
.tabBar{
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 109rpx;
  border-top: 1px solid #DADADA;
}
.tabBar .tabItem{
  width: 33.3%;
  height: 100%;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  color: #525252;
}
.tabBar .tabItem image{
  width: 52rpx;
  height: 47rpx;
}


/*主体内容*/
.wrap{
  position: relative;
  width: 100%;
  height: 100%;
  background: #fafafa;
  box-sizing: border-box;
}

.wrap .classInfo{
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  padding: 0 30rpx 0 48rpx;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  color: #1fba21;
  background: #fff;
  box-sizing: border-box;
}
.wrap .classInfo image{
  width: 49rpx;
  height: 28rpx;
}
.wrap .choise{
  padding: 16rpx;
  padding-left: 28rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #95C796;
  background: #fff;
}
.wrap .choise .choiseItem{
  position: relative;
  padding-left: 30rpx;
  padding-right: 60rpx;
  margin-right: 20rpx;
  
  height: 50rpx;
  line-height: 50rpx;
  background: #eee;
  border-radius: 25rpx;
  font-size: 24rpx;
  color: #666;
}
.wrap .choise .choiseItem image{
  position: absolute;
  right: 20rpx;
  top: 50%;
  margin-top: -8rpx;
  width: 25rpx;
  height: 18rpx;
}
.wrap .setTask{
  width: 100%;
}
.wrap .setTask .setTask-title{
  height: 74rpx;
  line-height: 74rpx;
  padding-left: 56rpx;
  font-size: 28rpx;
  color: #7e7e7e;
}

.wrap .setTask .setTask-content{
  height: 116rpx;
  padding: 30rpx 0;
  padding-left: 128rpx;
  line-height: 56rpx;
  border-bottom: 1px solid #E5E5E5;
  font-size: 26rpx;
  background: #fff;
  box-sizing: border-box;
}
.wrap .setTask .setTask-content input{
  width: 160rpx;
  padding: 0 30rpx;
  margin-left: 14rpx;
  color: #ff8c59;
  text-align: center;
  background: #F2F2F2;
  border-radius: 26rpx;
}
.wrap .tasks{
  width: 100%;
  box-sizing: border-box;
  background: #fff;
}
.wrap .tasks .taskItem{
  height: 80rpx;
  margin-left: 28rpx;
  border-bottom: 1px solid #E5E5E5;
  font-size: 26rpx;
  line-height: 80rpx;
  justify-content: space-between;
}
.wrap .tasks .taskItem .taskItem-left{
  flex: 1;
}
.wrap .tasks .taskItem .dot{
  margin: auto 0;
  margin-left: 25rpx;
  margin-right: 30rpx;
  width: 12rpx;
  height: 12rpx;
  background: #ff8c59;
  border-radius: 50%;
}
.wrap .tasks .taskItem .txt input{
  height: 80rpx;
  line-height: 80rpx;
}
.wrap .tasks .taskItem .radio{
  width: 60rpx;
  margin-right: 44rpx;
}
.wrap .tasks .taskItem .radio image{
  width: 33rpx;
  height: 24rpx;
  display: block;
  margin: 31rpx auto;
}
.wrap .tasks .taskItem .radio1 image{
  width: 36rpx;
  height: 36rpx;
  display: block;
  margin: 31rpx auto;
}
.wrap .tasks .taskAdd{
  color: #888;
}
.wrap .tasks .taskItem .add{
  width: 60rpx;
  margin-right: 44rpx;
}
.wrap .tasks .taskItem .add image{
  width: 60rpx;
  height: 60rpx;
  display: block;
  margin: 13rpx auto;
}                                
.btn {
  margin-top: 60rpx;
  padding-top: 60rpx;
  background: #fafafa;
  font-size: 36rpx;
}
.btn .loginBtn{
  width: 690rpx;
  height: 88rpx;
  line-height: 88rpx;
  background: #1fba21;
  color: #fff;
}
.hoverLogin{
  background: #009502!important;
}
.hideInp{
  width: 0;
  height: 0;

}

/*弹窗*/
.float{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background:rgba(0,0,0,.3);
  z-index: 10000;
}
.float .floatWrap{
  width: 80%;
  height: 560rpx;
  padding: 0 12rpx;
  background: #fff;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -40%;
  margin-top: -280rpx;
  border-radius: 10rpx;
  box-sizing: border-box;
}
.float .floatWrap .arrows{
  position: relative;
  height: 67rpx;
}
.float .floatWrap .arrows image{
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -9rpx;
  margin-top: -5rpx;
  width: 18rpx;
  height: 11rpx;
}
.float .floatWrap .floatC{
  height: 426rpx;

  overflow-y: scroll;
  overflow-X: hidden;
}
.float .floatWrap .floatC .floatC-item{
  height: 97rpx;
  line-height: 97rpx;
  text-align: center;
  border-bottom: 1px solid #ddd;
  font-size: 28rpx;
  color: #333;
}


