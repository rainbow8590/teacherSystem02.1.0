<!--index.wxml-->
<view class="container">
  <view class="wrap">
    <view class="classInfo flex">
      <view>{{classStr}}</view>
      <image src="../images/menu.gif" bindtap="powerDrawer" data-statu="{{isopen}}" wx:if="{{!showModalStatus}}"></image>
    </view>
    <view class="choise flex">
      <view class="choiseItem" data-id="class" bindtap="getClass">{{classInn}}<image src="../images/arrow.gif"></image></view>
      <view class="choiseItem" data-id="kejie" bindtap="getKejie">{{kejieInn}}<image src="../images/arrow.gif"></image></view>
    </view>
    <view class="setTask" wx:if="{{showTime}}">
      <view class="setTask-title">自定义打卡内容：</view>
      <view class="setTask-content flex">
        <text>截止时间：</text>
        <input class="writeDate" type="text" bindblur="getMonth" value="{{month}}" placeholder="如:10月26日"  />
        <input class="writeTime" type="text" bindblur="getClock" value="{{clock}}" placeholder="如:16:00" />
      </view>
    </view>
    <view class="tasks">
     <form bindsubmit="postTaskTemplate" wx:if="{{!showTime}}">
        <view class="taskItems">
          <view class="taskItem flex" wx:for="{{AllTemplateArr}}" wx:key="id">
            <input type="text" class="hideInp" name="datas[{{index}}][sClassCode]" value="{{item.classCode}}" />
            <input type="text" class="hideInp" name="datas[{{index}}][ID]" value="{{item.id}}" />
            <view class="taskItem-left flex">
              <view class="dot" style="background:#ff8c59}}"></view>
              <view class="txt">
                <input type="text" focus="{{item.focus}}"  name="datas[{{index}}][sName]" data-index="{{index}}" value="{{item.task}}" placeholder="自定义" bindblur="templateGetInpVal1" />
              </view>
              <!-- <input type="text" class="hideInp" name="datas[{{index}}][isComplete]" value="{{item.isComplete}}" /> -->
            </view>
            <view class="radio radio1" bindtap="checkRadio" data-id="{{index}}">
              <image src="../images/delete.png"></image>
            </view>
          </view>
        </view>
        <view class="taskItem taskAdd flex">
          <view class="flex">
            <view class="dot" style="background:#fafafa"></view>
            <view class="txt"><input type="text" disabled value="自定义添加" /></view>
          </view>
          <view class="add" bindtap="addTaskTemplate"><image src="../images/add.png"></image></view>
        </view>
        <view class="btn">
          <button formType="submit" class="loginBtn" hover-class="hoverLogin">确定</button>
        </view>
      </form>

      <form bindsubmit="postTask" wx:if="{{showTime}}">
        <view class="taskItems">
          <!-- 模板中的任务卡 -->
          <view class="taskItem flex" wx:for="{{taskArr}}" wx:key="id">
            <input type="text" class="hideInp" name="datas[{{index}}][sClassCode]" value="{{classCode}}" />
            <input type="text" class="hideInp" name="datas[{{index}}][nLessonNo]" value="{{tipKejieIndex}}" />
            <input type="text" class="hideInp" name="datas[{{index}}][dtEndDate]" value="{{endTime}}" />
            <view class="taskItem-left flex">
              <view class="dot" style="background:#ff8c59}}"></view>
              <view class="txt">
                <input type="text"  name="datas[{{index}}][sItemName]"  value="{{item.task}}" data-index="{{index}}" placeholder="自定义" bindblur="getInpVal1" />
              </view>
              <!-- <input type="text" class="hideInp" name="datas[{{index}}][isComplete]" value="{{item.isComplete}}" /> -->
            </view>
            <input type="text" class="hideInp" name="datas[{{index}}][sCode]" value="{{item.sCode}}" />
            <view class="radio" data-id="{{index}}">
              <image src="../images/check.png"></image>
            </view>
          </view>
          <!-- 自定义添加的任务卡 -->
          <view class="taskItem flex" wx:for="{{newTaskArr}}">
            <input type="text" class="hideInp" name="datas[{{index+taskArr.length}}][sClassCode]" value="{{classCode}}" />
            <input type="text" class="hideInp" name="datas[{{index+taskArr.length}}][nLessonNo]" value="{{tipKejieIndex}}" />
            <input type="text" class="hideInp" name="datas[{{index+taskArr.length}}][dtEndDate]" value="{{endTime}}" />
            <view class="taskItem-left flex">
              <view class="dot" style="background:#ff8c59"></view>
              <view class="txt">
                <input type="text" focus="{{item.focus}}" name="datas[{{index+taskArr.length}}][sItemName]" data-index="{{index}}" value="{{item.task}}" placeholder="自定义" bindblur="getInpVal2" />
              </view>
            </view>
            <input type="text" class="hideInp" name="datas[{{index+taskArr.length}}][sCode]" value="{{item.sCode}}" />
            <view class="radio radio1" bindtap="checkRadio1" data-id="{{index}}">
              <image src="../images/delete.png"></image>
            </view>
          </view>
         
        </view>
        
       
        <view class="taskItem taskAdd flex">
          <view class="flex">
            <view class="dot" style="background:#fafafa"></view>
            <view class="txt"><input type="text" disabled value="自定义添加" /></view>
          </view>
          <view class="add" bindtap="addTask"><image src="../images/add.png"></image></view>
        </view>
        <view class="btn">
          <button formType="submit" class="loginBtn" hover-class="hoverLogin">确定</button>
        </view>
      </form>
    </view>
  </view>

<!-- 弹窗 -->
  <view class="float" wx:if="{{show}}" data-id="float" bindtap="closeFloat">
    <view class="floatWrap">
      <view class="arrows arrowT"><image class="arrowT" src="../images/arrow-t.png"></image></view>
      <view class="floatC">
        <view class="floatC-item" wx:for="{{arr}}" data-id="{{item.id}}" bindtap="getIndex" wx:key="id">{{item.value}}</view>
      </view>
      <view class="arrows arrowB"><image class="arrowB" src="../images/arrow-b.png"></image></view>
    </view>
  </view>


 <!-- 导航 -->
  <view animation="{{animationData}}" class="mainMenu drawer_attr_box" wx:if="{{showModalStatus}}" bindtap="closeNav" data-id="closeNav">
    <view class="menu" data-id="menu">
        <view class="userinfo flex">
            <view class="Avatar">
                <image src="../images/noface.png" mode='widthFix'></image>
            </view>
            <view class="name">{{teacherName}}</view>
        </view>
        <view class="con"><navigator open-type="redirect" url='/pages/SchoolCollection/SchoolCollection'>学校信息收集</navigator></view>
        <view class="con"><navigator open-type="redirect" url='/pages/SelectClassEntryGrade/SelectClassEntryGrade'>学员资料查询</navigator></view>
        <view class="con"><navigator open-type="redirect" url='/pages/SelectClass/SelectClass'>班级成绩录入</navigator></view>
        <view class="con"><navigator open-type="redirect" url='/pages/PicClassList/PicClassList'>定制图片生成</navigator></view>
        <view class="quit tac"><button class="btn" bindtap="unlogin" hover-class="hoverLogin">退出登录</button></view>
    </view>
  </view>


  <!-- 导航tab -->
