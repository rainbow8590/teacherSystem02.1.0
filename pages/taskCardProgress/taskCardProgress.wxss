/**index.wxss**/
page{
  height: 100%;
}
.container{
  padding: 0;
}
.flex{
  display: flex;
}
/*  导航   */
.tabBar{
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 109rpx;
  border-top: 1px solid #DADADA;
}
.tabBar .tabItem{
  width: 33.3%;
  height: 100%;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  color: #525252;
}
.tabBar .tabItem image{
  width: 52rpx;
  height: 47rpx;
}
.hideInp{
  width: 0;
  height: 0;
}

/*主体内容*/
.wrap{
  position: relative;
  width: 100%;
  height: 100%;
  background: #fafafa;
  box-sizing: border-box;
}

.wrap .taskTitle{
  height: 330rpx;
  padding-top: 37rpx;
  color: #fff;
  background: #F3904C;
  margin-bottom: 22rpx;
}
.wrap .taskTitle .sClass{
  font-size: 32rpx;
  padding-bottom: 70rpx;
  text-align: center;
}
.wrap .taskTitle .sClass image{
  width: 31rpx;
  height: 34rpx;
  padding-left: 10rpx;
  display: inline-block;
  vertical-align: middle;
}
.wrap .taskTitle .sTime{
  text-align: center;
  font-size: 28rpx;
  padding-bottom: 65rpx;
}
.wrap .taskTitle .sTime text{
  font-size: 48rpx;
}
.wrap .taskTitle .sCard{
  font-size: 28rpx;
}
.wrap .taskTitle .sCard view{
  text-align: center;
  width: 50%;
}
.wrap .taskTitle .sCard text{
  border-bottom: 1px solid #fff;
}
.wrap .sStudent{
  height: 130rpx;
  font-size: 28rpx;
  line-height: 130rpx;
  padding-left: 58rpx;
  border-bottom: 1px solid #ddd;
  color: #32343d;
}
.wrap .sStudent text{
  font-size: 48rpx;
}





.wrap .tasks{
  width: 100%;
  box-sizing: border-box;
  background: #fff;
}
.taskItems{
  box-shadow: 0 0 5px #ccc;
  padding-bottom: 30rpx;
}
.wrap .tasks .taskItem{
  height: 86rpx;
  margin-left: 28rpx;
  border-bottom: 1px solid #E5E5E5;
  font-size: 26rpx;
  line-height: 86rpx;
  justify-content: space-between;
}
.wrap .tasks .taskItem .taskItem-left{
  flex:1;
}
.wrap .tasks .taskItem .dot{
  margin: auto 0;
  margin-left: 25rpx;
  margin-right: 30rpx;
  width: 12rpx;
  height: 12rpx;
  background: #ff8c59;
  border-radius: 50%;
}
.wrap .tasks .taskItem .radio{
  width: 60rpx;
  margin-right: 44rpx;
}
.wrap .tasks .taskItem .radio image{
  width: 33rpx;
  height: 24rpx;
  display: block;
  margin: 31rpx auto;
}
.wrap .tasks .taskAdd{
  color: #888;
}
.wrap .tasks .taskItem .add{
  width: 60rpx;
  margin-right: 44rpx;
}
.wrap .tasks .taskItem .add image{
  width: 60rpx;
  height: 60rpx;
  display: block;
  margin: 13rpx auto;
}
.btn {
  padding-top:106rpx;
  background: #fafafa;
  font-size: 36rpx;
}
.btn .loginBtn{
  width: 70%;
  height: 88rpx;
  line-height: 88rpx;
  background: #F3904C;
  color: #fff;
}

.wrap1{
  width: 100%;
  height: 100%;
  padding-top: 256rpx;
  box-sizing: border-box;
}
.wrap1 image{
  display: block;
  width: 210rpx;
  height: 210rpx;
  margin: 0 auto;
  margin-bottom: 100rpx;
}
.wrap1 .tip{
  width: 600rpx;
  line-height: 40rpx;
  margin: 0 auto;
  font-size: 30rpx;
  color: #363636;
  text-align: center;
}
.wrap1 button{
  margin-top: 156rpx;
  width: 70%;
  color: #fff;
  background: #F3904C;
}


/*弹窗*/
.float{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background:rgba(0,0,0,.3);
  z-index: 10000;
}
.float .floatWrap{
  width: 80%;
  height: 560rpx;
  padding: 0 12rpx;
  background: #fff;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -40%;
  margin-top: -280rpx;
  border-radius: 10rpx;
  box-sizing: border-box;
}
.float .floatWrap .arrows{
  position: relative;
  height: 67rpx;
}
.float .floatWrap .arrows image{
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -9rpx;
  margin-top: -5rpx;
  width: 18rpx;
  height: 11rpx;
}
.float .floatWrap .floatC{
  height: 426rpx;

  overflow-y: scroll;
  overflow-X: hidden;
}
.float .floatWrap .floatC .floatC-item{
  height: 97rpx;
  line-height: 97rpx;
  text-align: center;
  border-bottom: 1px solid #ddd;
  font-size: 28rpx;
  color: #333;
}


