/**index.wxss**/
page{
  height: 100%;
}
.container{
  padding: 0;
  color: #32343d;
}
.flex{
  display: flex;
}
/*  导航   */
.tabBar{
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 55px;
  border-top: 1px solid #DADADA;
  overflow:hidden;
  background:#fafafa;
}
.tabBar .tabItem{
  width: 33.3%;
  height: 100%;
  font-size: 15px;
  color: #525252;
  text-align: center;
  padding: 5px 0;
}
.tabBar .tabItem .icon{
  
  height: 24px;
  overflow: hidden;
}
.tabBar .tabItem image{
  margin: 0 auto;
  width: 26px;
  height: 24px;
}
.tabBar .tabItem .txt{
  height: 15px;
  line-height: 15px;
  padding-top: 6px;
}



.hoverLogin{
  background: #009502!important;
}

/*主体内容*/
.wrap{
  position: relative;
  width: 100%;
  height: 100%;
  background: #fafafa;
  box-sizing: border-box;
}

.wrap .teacherInfo{
  width: 100%;
  height: 110rpx;
  padding: 0 30rpx 0 48rpx;
  border-bottom: 1px solid #1FB923;
  justify-content: space-between;
  align-items: center;
  font-size: 34rpx;
  color:#666;
  box-sizing: border-box;
}
.wrap .teacherInfo text{
  font-size: 46rpx;
  color: #1FB923;
}
.wrap .teacherInfo image{
  width: 49rpx;
  height: 28rpx;
}
.wrap .allWrap{
  display: block;
  width: 100%;
  padding-top: 30rpx;
  background: #fff;
}
.wrap .allWrap .item{
  position: relative;
  width: 100%;
  height: 144rpx;
  line-height: 144rpx;
  border-bottom: 1px solid #F0F0F0;
  font-size: 24rpx;
  padding-right: 114rpx;
  box-sizing: border-box;
}
.wrap .allWrap .item label{
  padding: 0 48rpx 0 56rpx;
}
.wrap .allWrap .item .inp{
  margin: auto 0;
  flex: 1;
  padding: 0 20rpx;
  height: 52rpx;
  border-radius: 26px;
  background: rgba(223,223,223,.52);
  box-sizing: border-box;
  font-size: 26rpx;
  line-height: 52rpx;
}

.wrap .allWrap .item-btns .radio{
  width: 100%;
  height: 84rpx;
  padding: 0 56rpx;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  font-size: 26rpx;
}

.wrap .allWrap .item image{
  width: 25rpx;
  height: 17rpx;
  position: absolute;
  right: 134rpx;
  top: 50%;
  margin-top: -8rpx;
  z-index: 9999;
}
.btn {
  padding-top: 94rpx;
  background: #fafafa;
}
.btn .loginBtn{
  width: 690rpx;
  height: 90rpx;
  background: #1fba21;
  color: #fff;
}

/*弹窗*/
.float{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background:rgba(0,0,0,.3);
  z-index: 10000;
}
.float .floatWrap{
  width: 80%;
  height: 560rpx;
  padding: 0 12rpx;
  background: #fff;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -40%;
  margin-top: -280rpx;
  border-radius: 10rpx;
  box-sizing: border-box;
}
.float .floatWrap .arrows{
  position: relative;
  height: 67rpx;
}
.float .floatWrap .arrows image{
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -9rpx;
  margin-top: -5rpx;
  width: 18rpx;
  height: 11rpx;
}
.float .floatWrap .floatC{
  height: 426rpx;

  overflow-y: scroll;
  overflow-X: hidden;
}
.float .floatWrap .floatC .floatC-item{
  height: 97rpx;
  line-height: 97rpx;
  text-align: center;
  border-bottom: 1px solid #ddd;
  font-size: 28rpx;
  color: #333;
}


